<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huanglei.wanandroid">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".app.WanAndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".vp.main.MainActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:launchMode="singleTask" />
        <activity
            android:name=".vp.login.LoginActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:launchMode="singleTop" />
        <activity
            android:name=".vp.articledetail.ArticleDetailActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".vp.hotwebsite.HotWebsiteActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:launchMode="singleTop"
            android:theme="@style/RoundCornerDialogActivityTheme" />
        <activity
            android:name=".vp.search.SearchActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:launchMode="singleTop"
            android:theme="@style/RoundCornerDialogActivityTheme" />
        <activity
            android:name=".vp.search.SearchListActivity"
            android:configChanges="screenSize|orientation|keyboardHidden" />
        <activity
            android:name=".vp.collect.CollectActivity"
            android:configChanges="screenSize|orientation|keyboardHidden" />
        <activity
            android:name=".vp.main.knowledge.KnowledgeActivity"
            android:configChanges="screenSize|orientation|keyboardHidden" />
        <activity
            android:name=".vp.SplashActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:theme="@style/splashActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".vp.AboutUsActivity"
            android:configChanges="screenSize|orientation|keyboardHidden" />
        <activity
            android:name=".vp.setting.SettingActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"></activity>
    </application>

</manifest>