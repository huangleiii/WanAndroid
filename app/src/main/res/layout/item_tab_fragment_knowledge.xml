<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/img_item_fragment_knowledge"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chevron_right_grey_24dp"/>
    <TextView
        android:id="@+id/tv_class_item_fragment_knowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/img_item_fragment_knowledge"
        android:text="标题"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/tv_tab_item_fragment_knowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_below="@id/tv_class_item_fragment_knowledge"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/img_item_fragment_knowledge"
        android:text="类型哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈斤"
        android:gravity="center_vertical"/>
</RelativeLayout>