<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huanglei.wanandroid.main.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_activity_login"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/tv_title_activity_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp">


        <LinearLayout
            android:id="@+id/lin_account_activity_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="账号："
                android:textSize="16sp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_account_activity_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请输入账号" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_password_activity_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="密码："
                android:textSize="16sp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_password_activity_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_repassword_activity_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="确认："
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/et_repassword_activity_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请再次输入密码"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_log_in_activity_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="登录"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_register_activity_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="注册"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_register_activity_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="没有账号？去注册" />

        <TextView
            android:id="@+id/tv_log_in_activity_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="已有账号？去登录"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
